{%- macro m_element_raw(el) -%}
{%- if not el -%}
{%- elif not el.tag -%}
  {{- el -}}
{%- else -%}

{%- if with_control_el or el.tag[0] != "_" -%}
  <{{ el.tag }} {%- for key, value in el.attr | dictsort -%}
    {{- ' ' -}}{{- key -}}="{{- value | escape -}}"
  {%- endfor -%}>
{%- endif -%}

    {%- for child in el.children -%}
      {%- if not child.tag -%}
        {{- child -}}
      {%- else -%}
        {{- m_element_raw(child) -}}
      {%- endif -%}
    {%- endfor -%}

{%- if with_control_el or el.tag[0] != "_" -%}
  </{{ el.tag }}>
{%- endif -%}

{%- endif -%}
{%- endmacro -%}

<?xml version="1.0" encoding="utf-8"?>
{{- m_element_raw(law) -}}
