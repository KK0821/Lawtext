{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "module": "commonjs",
        "target": "es5",
        "downlevelIteration": true,
        "lib": ["dom", "es2018"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDirs": [
            "src",
            "../core/src"
        ],
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["dist-dev", "dist-prod", "node_modules"]
}